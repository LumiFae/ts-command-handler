{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "es2022",
        "moduleResolution": "nodenext"
    },
    "exclude": ["node_modules", "dist"]
}
